<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hitao">
    <!--允许联网 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!--获取GSM（2g）、WCDMA（联通3g）等网络状态的信息  -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!--获取wifi网络状态的信息 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!--保持CPU 运转，屏幕和键盘灯有可能是关闭的,用于文件上传和下载 -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <!--获取sd卡写的权限，用于文件上传和下载-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!--允许读取手机状态 用于创建BmobInstallation-->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainActivity"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.RegAct"
            android:launchMode="singleTask"/>
        <activity android:name=".activity.BuyerAct"
            android:launchMode="singleTask"/>
        <activity android:name=".activity.DetailedAct"
            android:launchMode="singleTask"/>
        <activity android:name=".activity.PersonalAct"
            android:launchMode="singleTask"/>
        <activity android:name=".activity.OrderAct"
            android:launchMode="singleTask"/>
        <activity android:name=".activity.SOrderAct"
            android:launchMode="singleTask"/>
        <activity android:name=".activity.AddProducctActivity"
            android:launchMode="singleTask"/>
        <activity android:name=".activity.ChProoductActivity"
            android:launchMode="singleTask"/>
        <activity android:name=".activity.SDetailedAct"
            android:launchMode="singleTask"/>
        <activity android:name=".activity.SellerAct"
            android:launchMode="singleTask"/>
        <activity android:name=".activity.SPersonalActivity"
            android:launchMode="singleTask"/>
    </application>

</manifest>