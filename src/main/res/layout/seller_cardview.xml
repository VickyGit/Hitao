<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:id="@+id/seller_product_desc_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/seller_product_desc_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/welcome"
            android:scaleType="fitXY"/>
        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/seller_desc_floatbtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/accent_material_dark"
            android:layout_alignBottom="@+id/product_desc_image"
            android:layout_alignParentRight="true"
            app:fab_size="mini"
            />

        <TextView
            android:id="@+id/seller_product_desc_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_below="@+id/product_desc_image"
            android:layout_margin="10dp"
            android:maxLines="1"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/product_price_Linear"
            android:layout_below="@+id/seller_product_desc_name">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="15dp"
                android:textSize="15sp"
                android:textColor="@color/priceColor"
                android:text="¥"
                />
            <TextView
                android:id="@+id/seller_product_desc_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="20dp"
                android:textSize="15sp"
                android:textColor="@color/priceColor"
                android:text="500"
                />
            <TextView
                android:id="@+id/seller_product_desc_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:textSize="10sp"
                android:text="300"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:textSize="10sp"
                android:text="件可售"/>
        </LinearLayout>
        <ScrollView
            android:layout_below="@+id/seller_product_price_Linear"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/seller_product_desc_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_below="@+id/product_desc_name"
                android:layout_margin="10dp"
                />
        </ScrollView>


    </RelativeLayout>

</android.support.v7.widget.CardView>