<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:id="@+id/card_logn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        android:elevation="8dp"
        android:layout_margin="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/person_id"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:hint="ID号"
                app:met_baseColor="#0056d3"
                app:met_primaryColor="#239888"
                app:met_floatingLabel="highlight"
                android:paddingRight="30dp"
                android:paddingLeft="30dp"
                />
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/person_name"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="用户名"
                app:met_baseColor="#0056d3"
                app:met_primaryColor="#239888"
                app:met_floatingLabel="highlight"
                android:paddingRight="30dp"

                android:paddingLeft="30dp"/>
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/person_pass"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="密码"
                app:met_baseColor="#0056d3"
                app:met_primaryColor="#239888"
                app:met_floatingLabel="highlight"
                android:paddingRight="30dp"
                android:paddingLeft="30dp"
                android:inputType="textPassword"/>
            <Button
                android:id="@+id/person_btn"
                android:text="修改个人信息"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:paddingRight="30dp"
                android:paddingLeft="30dp"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        android:elevation="8dp"
        android:layout_margin="10dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            >
            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="个人余额:"
                android:textSize="20sp"

                android:paddingRight="30dp"
                android:paddingLeft="30dp"/>
            <TextView
                android:id="@+id/person_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/text"
                android:text="1000"
                android:textSize="20sp"
                />
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/person_addmoney"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="充值金额"
                android:layout_below="@+id/text"
                app:met_baseColor="#0056d3"
                app:met_primaryColor="#239888"
                app:met_floatingLabel="highlight"
                android:paddingRight="30dp"
                android:paddingLeft="30dp"/>
            <Button
                android:id="@+id/person_recharge"
                android:layout_below="@+id/person_addmoney"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="充值"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:paddingRight="30dp"
                android:paddingLeft="30dp"
                />

        </RelativeLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>